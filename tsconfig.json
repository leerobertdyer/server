{
    "compilerOptions": {
      "module": "CommonJS",
      "strict": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "rootDir": "src",
      "outDir": "dist",
      "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["**/*.spec.ts"]
  }